<link rel="stylesheet" href="~/css/SuperAdmin.css" />

<section class="admin-panel">
    <h2 class="admin-heading">Administration Panel</h2>
    <p class="admin-subheading">Select an action to manage the system:</p>

    <div class="admin-actions">
        <a asp-controller="Superadmin" asp-action="ManageUsers" class="admin-button">
            <i class="fas fa-users"></i> Manage Users
        </a>

        <a asp-controller="Superadmin" asp-action="AssignSubmissions" class="admin-button">
            <i class="fas fa-tasks"></i> Assign Submissions
        </a>

        <a asp-controller="Superadmin" asp-action="Statistics" class="admin-button">
            <i class="fas fa-chart-bar"></i> View Statistics
        </a>
    </div>
</section>