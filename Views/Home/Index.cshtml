@{
    ViewData["Title"] = "Home Page";
}

<!-- Leaflet Map Container -->
<div class="BigContainer">
    <div id="map"></div>
    <div id="mapSideBar">
        <nav id="sideBarNav">
            <button onclick="showSideBarSec('TempMarkerForm')">Test 1</button>
            <button onclick="showSideBarSec('SomeOtherForm')">Test 2</button>
            <button onclick="showSideBarSec('PotatoForm')">Test 3</button>
        </nav>
        <div class="sideBarContainer">
            <div id="TempMarkerForm">
                <h3>Temporary Marker Form</h3>
                <form>
                    <label for="type">Type</label>
                    <input type="text" id="type" name="type" placeholder="Enter type">

                    <label for="description">Description</label>
                    <input type="text" id="description" name="description" placeholder="Enter description">

                    <label for="lat">Latitude</label>
                    <input type="number" id="lat" name="lat" disabled>

                    <label for="lng">Longitude</label>
                    <input type="number" id="lng" name="lng" disabled>

                    <label for="height">Height (m)</label>
                    <input type="number" id="height" name="height" placeholder="Enter height">

                    <button type="submit">Save Marker</button>
                </form>
            </div>
            <div id="SomeOtherForm" hidden>
                <p>Some other form</p>
            </div>
            <div id="PotatoForm" hidden>
                <p>PotatoForm</p>
            </div>
        </div>

    </div>
</div>>

